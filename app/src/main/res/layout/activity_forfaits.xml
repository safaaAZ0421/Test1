<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <Button
        android:id="@+id/btnEtudiant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forfait Étudiant - 150Dhs/mois"
        android:background="@android:color/holo_blue_light"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/btnEmploye"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@android:color/holo_green_light"
        android:padding="10dp"
        android:text="Forfait Employé - 300Dhs/mois"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnEnseignant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/orange_light"
        android:padding="10dp"
        android:text="Forfait Enseignants/Professeurs - 250Dhs/mois"
        android:textStyle="bold" />

</LinearLayout>